<merge
   xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/Note"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent">

   <ScrollView
      android:id="@+id/note_activity_note_container"
      style="@style/Note"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">

      <LinearLayout
         android:orientation="vertical"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:paddingTop="10dip"
         android:paddingLeft="10dip">

         <include
            android:id="@+id/note_activity_note"
            layout="@layout/note"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
      </LinearLayout>
   </ScrollView>

   <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom">

      <RelativeLayout
         android:id="@+id/note_buttons"
         style="@style/Task_ButtonBar"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dip"
         android:layout_below="@id/note_activity_note_container"
         android:padding="3dip">

         <ImageButton
            android:id="@+id/note_buttons_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_button_task_edit"
            android:scaleType="fitXY"
            android:onClick="onEditNote" />

         <ImageButton
            android:id="@+id/note_buttons_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/note_buttons_edit"
            android:src="@drawable/ic_button_task_trash"
            android:scaleType="fitXY"
            android:onClick="onDeleteNote" />
      </RelativeLayout>

      <RelativeLayout
         android:id="@+id/note_activity_bottom_button_bar"
         style="@style/App_ButtonBar_Bgnd"
         android:layout_width="fill_parent"
         android:layout_height="70dip"
         android:layout_below="@+id/note_buttons"
         android:paddingTop="5dip">

         <ImageButton
            android:id="@+id/note_btn_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_button_arrow_up"
            android:scaleType="fitXY"
            android:onClick="onPrevNote" />

         <Button
            android:id="@+id/note_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:text="@string/phr_close"
            android:onClick="onClose" />

         <ImageButton
            android:id="@+id/note_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_button_arrow_down"
            android:scaleType="fitXY"
            android:onClick="onNextNote" />
      </RelativeLayout>
   </RelativeLayout>
</merge>
