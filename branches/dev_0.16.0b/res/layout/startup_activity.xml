<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:moloko="http://schemas.android.com/apk/res/dev.drsoran.moloko"
   style="@style/StartUp.Error"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent">

   <ScrollView
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"      
      android:layout_marginTop="@dimen/app_actionbar_height">

      <LinearLayout
         android:id="@android:id/widget_frame"
         android:orientation="vertical"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_margin="10dip">
      </LinearLayout>
   </ScrollView>

   <dev.drsoran.moloko.layouts.BottomButtonBarLayout
      android:id="@+id/btn_bar"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:paddingTop="5dip"
      moloko:button1Text="center_button"
      moloko:stretchSingleButton="false"
      android:visibility="gone"/>

</RelativeLayout>
