<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:moloko="http://schemas.android.com/apk/res/dev.drsoran.moloko"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent">

   <dev.drsoran.moloko.widgets.ClearableAutoCompleteTextView
      android:id="@+id/add_rename_list_list_name"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dip"
      android:layout_alignParentTop="true"
      android:hint="@string/dlg_add_rename_list_list_name_hint"
      android:inputType="text|textAutoCorrect|textCapSentences"
      android:imeOptions="actionDone"
      android:selectAllOnFocus="true" />

   <dev.drsoran.moloko.widgets.ClearableAutoCompleteTextView
      android:id="@+id/add_rename_list_smart_filter"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dip"
      android:layout_below="@+id/add_rename_list_list_name"
      android:hint="@string/dlg_add_rename_list_smart_filter_hint"
      android:inputType="text|textAutoCorrect"
      android:imeOptions="actionDone"
      android:selectAllOnFocus="true" />

   <LinearLayout
      android:id="@+id/buttonPanel"
      style="?attr/bottomButtonBarStyle"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/add_rename_list_smart_filter"
      android:minHeight="54dip"
      android:orientation="vertical">

      <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingTop="4dip"
         android:paddingLeft="2dip"
         android:paddingRight="2dip">
         <LinearLayout
            android:id="@+id/leftSpacer"
            android:layout_weight="0.25"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
         <Button
            android:id="@+id/btn_left"
            android:layout_width="0dip"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="@string/btn_ok"
            android:layout_height="wrap_content" />
         <Button
            android:id="@+id/btn_right"
            android:layout_width="0dip"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="@string/btn_cancel"
            android:layout_height="wrap_content" />
         <LinearLayout
            android:id="@+id/rightSpacer"
            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
      </LinearLayout>
   </LinearLayout>
</RelativeLayout>
