<resources>
	<declare-styleable name="TitleWithView">
		<attr name="showTopLine" format="boolean" />
		<attr name="topLineColor" format="reference|color" />
		<attr name="topLineHeight" format="reference|dimension" />
		<attr name="imageSrc" format="reference" />
		<attr name="title" format="reference|string" />
		<attr name="titleColor" format="reference|color" />
		<attr name="titleSize" format="reference|dimension" />
		<attr name="titleStyle">
			<flag name="normal" value="0" />
			<flag name="bold" value="1" />
			<flag name="italic" value="2" />
		</attr>
      <attr name="allPadding" format="reference|dimension" />
		<attr name="titlePaddingTop" format="reference|dimension" />
      <attr name="viewMarginTop" format="reference|dimension" />
	</declare-styleable>
   
   <declare-styleable name="TitleWithText">
      <attr name="text" format="reference|string" />
      <attr name="textColor" format="reference|color" />
      <attr name="textSize" format="reference|dimension" />
      <attr name="textStyle">
         <flag name="normal" value="0" />
         <flag name="bold" value="1" />
         <flag name="italic" value="2" />
      </attr>
      <attr name="textPaddingTop" format="reference|dimension" />
   </declare-styleable>
   
   <declare-styleable name="TitleWithSpinner">
      <attr name="spinnerEntries" format="reference" />
      <attr name="spinnerValues" format="reference" />
   </declare-styleable>

	<declare-styleable name="TitleBar">
		<attr name="titleText" format="reference|string" />
		<attr name="showButton">
			<flag name="none" value="0" />
			<flag name="search" value="1" />
			<flag name="home" value="2" />
         <flag name="add_task" value="4" />
         <flag name="add_list" value="8" />
		</attr>
	</declare-styleable>

	<declare-styleable name="SyncableListPreference">
		<attr name="syncWithRtmKey" format="reference|string" />
	</declare-styleable>

	<declare-styleable name="InfoTextPreference">
		<attr name="infoText" format="reference|string" />
		<attr name="infoWidget" format="reference" />
	</declare-styleable>

	<declare-styleable name="WrappingLayout">
		<attr name="horizontal_spacing" format="reference|dimension" />
		<attr name="vertical_spacing" format="reference|dimension" />
	</declare-styleable>
   
   <declare-styleable name="BottomButtonBarLayout">
      <attr name="stretchSingleButton" format="boolean" />
      <attr name="button1Text" format="reference|string" />
      <attr name="button2Text" format="reference|string" />
      <attr name="button1Drawable" format="reference" />
      <attr name="button2Drawable" format="reference" />
      <attr name="button1OnClick" format="reference|string" />
      <attr name="button2OnClick" format="reference|string" />
      <attr name="backgroundColor" format="reference|color" />
   </declare-styleable>
</resources>
