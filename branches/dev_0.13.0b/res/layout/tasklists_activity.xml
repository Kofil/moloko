<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent">

   <dev.drsoran.moloko.layouts.TitleBarLayout
      xmlns:moloko="http://schemas.android.com/apk/res/dev.drsoran.moloko"
      style="@style/App_TitleBar"
      moloko:titleText="@string/app_tasklists"
      moloko:showButton="add_task|home|search" />

   <ExpandableListView
      android:id="@+id/android:list"
      style="@style/TaskLists_Lists"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent" />

   <FrameLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
      
      <include
         android:id="@id/android:empty"
         layout="@layout/app_loading_spinner" />

      <TextView
         android:id="@+id/tasklists_activity_no_lists"
         style="@style/App_No_List_Elements_Text"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:text="@string/tasklists_no_lists"
         android:visibility="gone" />
   </FrameLayout>

</LinearLayout>
