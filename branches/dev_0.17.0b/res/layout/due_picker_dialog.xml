<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dip"
    android:padding="5dip"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/due_dlg_date_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <dev.drsoran.moloko.widgets.FocusableWheelView
            android:id="@+id/due_dlg_date_wheel_1"
            android:layout_width="0dip"
            android:layout_height="140dip"
            android:layout_weight="0.3" />

        <dev.drsoran.moloko.widgets.FocusableWheelView
            android:id="@+id/due_dlg_date_wheel_2"
            android:layout_width="0dip"
            android:layout_height="140dip"
            android:layout_weight="0.3" />

        <dev.drsoran.moloko.widgets.FocusableWheelView
            android:id="@+id/due_dlg_date_wheel_3"
            android:layout_width="0dip"
            android:layout_height="140dip"
            android:layout_weight="0.3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_gravity="center_horizontal" >

        <dev.drsoran.moloko.widgets.FocusableWheelView
            android:id="@+id/due_dlg_time_wheel_hour"
            android:layout_width="60dip"
            android:layout_height="140dip" />

        <dev.drsoran.moloko.widgets.FocusableWheelView
            android:id="@+id/due_dlg_time_wheel_minute"
            android:layout_width="60dip"
            android:layout_height="140dip" />

        <dev.drsoran.moloko.widgets.FocusableWheelView
            android:id="@+id/due_dlg_time_wheel_am_pm"
            android:layout_width="70dip"
            android:layout_height="140dip" />
    </LinearLayout>

</LinearLayout>