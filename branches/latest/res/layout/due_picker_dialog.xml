<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent">

   <RelativeLayout
      android:id="@+id/due_dlg_date_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true">

      <dev.drsoran.moloko.widgets.FocusableWheelView
         android:id="@+id/due_dlg_date_wheel_1"
         android:layout_height="140dip"
         android:layout_width="100dip"
         android:layout_margin="5dip"
         android:layout_toLeftOf="@+id/due_dlg_date_wheel_2" />

      <dev.drsoran.moloko.widgets.FocusableWheelView
         android:id="@id/due_dlg_date_wheel_2"
         android:layout_height="140dip"
         android:layout_width="100dip"         
         android:layout_margin="5dip"
         android:layout_centerHorizontal="true" />

      <dev.drsoran.moloko.widgets.FocusableWheelView
         android:id="@+id/due_dlg_year_wheel"
         android:layout_height="140dip"
         android:layout_width="100dip"
         android:layout_margin="5dip"
         android:layout_toRightOf="@id/due_dlg_date_wheel_2" />
   </RelativeLayout>

   <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/due_dlg_date_container"
      android:layout_margin="5dip">
      
      <dev.drsoran.moloko.widgets.FocusableWheelView
         android:id="@+id/due_dlg_time_wheel_hour"
         android:layout_height="140dip"
         android:layout_width="50dip"
         android:layout_toLeftOf="@+id/due_dlg_time_wheel_minute" />

      <dev.drsoran.moloko.widgets.FocusableWheelView
         android:id="@id/due_dlg_time_wheel_minute"
         android:layout_height="140dip"
         android:layout_width="50dip"
         android:layout_toLeftOf="@+id/due_dlg_time_wheel_am_pm"         
         android:layout_alignWithParentIfMissing="true" />
         
      <dev.drsoran.moloko.widgets.FocusableWheelView
         android:id="@id/due_dlg_time_wheel_am_pm"
         android:layout_height="140dip"
         android:layout_width="50dip"         
         android:layout_marginRight="5dip"
         android:layout_alignParentRight="true" />
   </RelativeLayout>

</RelativeLayout>
