<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent">

   <kankan.wheel.widget.WheelView
      android:id="@+id/estimate_dlg_number_wheel"
      android:layout_height="wrap_content"
      android:layout_width="0dip"
      android:layout_weight="0.5"
      android:layout_margin="5dip"      
      android:nextFocusRight="@+id/estimate_dlg_unit_wheel"
      android:nextFocusLeft="@+id/estimate_dlg_unit_wheel" />

   <kankan.wheel.widget.WheelView
      android:id="@id/estimate_dlg_unit_wheel"
      android:layout_height="wrap_content"
      android:layout_width="0dip"
      android:layout_weight="0.5"
      android:layout_margin="5dip"
      android:nextFocusRight="@id/estimate_dlg_number_wheel"
      android:nextFocusLeft="@id/estimate_dlg_number_wheel" />

</LinearLayout>
