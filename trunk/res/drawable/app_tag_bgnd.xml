<?xml version="1.0" encoding="utf-8"?>
<selector
   xmlns:android="http://schemas.android.com/apk/res/android">

   <item
      android:state_pressed="false">
      <shape
	      android:shape="rectangle">	     
	      <solid
	        android:color="@color/app_tag_bgnd_normal_fill"/>
	      <padding
	        android:left="5dip"
	        android:right="5dip"
	        android:bottom="2dip"/>     
	      <corners
	        android:radius="2dip"/>     
      </shape>
	</item>

   <item
      android:state_pressed="true">
      <shape
         android:shape="rectangle">   
         <solid
            android:color="@color/app_tag_bgnd_pressed_fill"/>
         <padding
            android:left="5dip"
            android:right="5dip"
            android:bottom="2dip"/>     
         <corners
            android:radius="2dip"/>
      </shape>
   </item>
    
</selector>
