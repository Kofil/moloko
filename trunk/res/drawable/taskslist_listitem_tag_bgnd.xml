<?xml version="1.0" encoding="utf-8"?>
<selector
   xmlns:android="http://schemas.android.com/apk/res/android">

   <item
      android:state_pressed="false">
      <shape
	      android:shape="rectangle">	     
	      <solid
	        android:color="@color/taskslist_listitem_tag_bgnd_normal_fill"/>
	      <padding
	        android:left="5sp"
	        android:right="5sp"
	        android:bottom="2sp"/>     
	      <corners
	        android:radius="2sp"/>     
      </shape>
	</item>

   <item
      android:state_pressed="true">
      <shape
         android:shape="rectangle">   
         <solid
            android:color="@color/taskslist_listitem_tag_bgnd_pressed_fill"/>
         <padding
            android:left="5sp"
            android:right="5sp"
            android:bottom="2sp"/>     
         <corners
            android:radius="2sp"/>
      </shape>
   </item>
    
</selector>
