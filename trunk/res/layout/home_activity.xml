<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:moloko="http://schemas.android.com/apk/res/dev.drsoran.moloko"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:orientation="vertical">
   
	<dev.drsoran.moloko.layouts.TitleBarLayout   
     android:id="@+id/title_bar"         
     style="@style/App_TitleBar"
     android:layout_width="fill_parent"
     android:layout_height="@dimen/app_titlebar_height"
     moloko:titleText="@string/app_home"
     moloko:showButton="search" />
	      
	<GridView
	  android:id="@+id/home_gridview"
	  android:layout_width="fill_parent" 
	  android:layout_height="fill_parent"
	  android:numColumns="auto_fit"
	  android:verticalSpacing="10dip"
	  android:horizontalSpacing="10dip"
	  android:columnWidth="80dip"
	  android:stretchMode="columnWidth"
	  android:gravity="center" />
	
</LinearLayout>