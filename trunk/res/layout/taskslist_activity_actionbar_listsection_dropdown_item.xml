<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:moloko="http://schemas.android.com/apk/res/dev.drsoran.moloko"
    style="?attr/spinnerDropDownItemStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.actionbarsherlock.internal.widget.CapitalizingTextView
        android:id="@android:id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:singleLine="true"
        android:text="@string/app_tasklists"
        android:textAllCaps="true" />
    
    <dev.drsoran.moloko.widgets.SimpleLineView
        android:id="@id/line"
        android:layout_height="2dip"
        android:layout_width="fill_parent"
        moloko:lineColor="@color/app_holo_gray" />   

