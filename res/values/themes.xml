<?xml version="1.0" encoding="utf-8"?>
<resources>
   <style
      name="Theme.Moloko"
      parent="Theme.Sherlock.Light">

      <!-- Window attributes --> 
      <item name="android:windowContentOverlay">@null</item>
      <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackgroundStyle</item>
      <item name="android:windowBackground">@color/app_default_bgnd</item>
      <item name="android:textColorPrimary">@color/app_default_text_color</item>
      
      <!-- ProgressBar -->
      <item name="android:progressBarStyle">@android:style/Widget.ProgressBar.Inverse</item>
      <item name="android:progressBarStyleSmall">@android:style/Widget.ProgressBar.Small.Inverse</item>
      <item name="android:progressBarStyleLarge">@android:style/Widget.ProgressBar.Large.Inverse</item>
      <item name="android:progressBarStyleInverse">@android:style/Widget.ProgressBar</item>
      <item name="android:progressBarStyleSmallInverse">@android:style/Widget.ProgressBar.Small</item>
      <item name="android:progressBarStyleLargeInverse">@android:style/Widget.ProgressBar.Large</item>
      
      <!-- ActionBar attributes -->
      <item name="abBackground">@drawable/app_actionbar_bgnd</item>
      <item name="actionBarSize">@dimen/app_actionbar_height</item>
      <item name="abTitleTextStyle">@style/ActionBarTextStyle</item>
      <item name="actionSpinnerItemStyle">@style/ActionBarSpinnerItemStyle</item>
      <item name="abDisplayOptions">showHome|showTitle</item>
      <item name="abIcon">@drawable/ic_title_home</item>
      
      <!-- Widgets -->
      <item name="android:expandableListViewStyle">@style/ExpandableListViewStyle</item>
      <item name="android:listPreferredItemHeight">@dimen/app_listPreferredItemHeight</item>
      <item name="android:textViewStyle">@style/TextViewStyle</item>
      <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewStyle</item>
      <item name="titleWithViewStyle">@style/TitleWithViewStyle</item>
      <item name="titleWithTextStyle">@style/TitleWithViewStyle.Text</item>
      <item name="titleWithSpinnerStyle">@style/TitleWithViewStyle.Spinner</item>
      <item name="wrappingLayoutStyle">@style/WrappingLayoutStyle</item>
      
      <!-- ButtonBar -->
      <item name="bottomButtonBarStyle">@style/BottomButtonBarStyle</item>      
   </style>

   <style name="Theme.Moloko.Authenticator" parent="@android:style/Theme">      
   </style>
   
   <style name="Theme.Moloko.Preferences">
      <item name="android:windowNoTitle">false</item>
      <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
      <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackgroundStyle</item>
      
      <!-- Widgets -->
      <item name="android:listViewStyle">@style/ForceWhiteListViewStyle</item>
   </style>

   <style
      name="Theme.Moloko.Home">
      
      <!-- ActionBar attributes -->
      <item name="abDisplayOptions">useLogo|showHome|showTitle</item>
      <item name="abIcon">@null</item>
      <item name="abLogo">@drawable/ic_title_raw_launcher</item>      
   </style>
   
   <style
      name="Theme.Moloko.SelectMultipleTasks">
      
      <!-- ActionBar attributes -->
      <item name="abDisplayOptions">showHome|homeAsUp|showTitle</item>
      <item name="abIcon">@drawable/app_actionbar_empty_icon</item>
   </style>

   <style
      name="Theme.Moloko.Task">
      
      <!-- Window attributes -->
      <item name="android:windowBackground">@color/task_bgnd</item>
      
      <!-- ActionBar attributes -->
      <item name="abDisplayOptions">showHome|homeAsUp|showTitle</item>
      <item name="abIcon">@drawable/app_actionbar_empty_icon</item> 
      
      <!-- Widgets -->
      <item name="titleWithSpinnerStyle">@style/TitleWithViewStyle.Spinner.NoLine</item>
      <item name="titleWithTextStyle">@style/TitleWithViewStyle.Text.NoLine</item>
      <item name="wrappingLayoutStyle">@style/WrappingLayoutStyle.Task</item>
   </style>
   
   <style
      name="Theme.Moloko.Task.EditMultiple">
      
      <!-- Window attributes -->
      <item name="android:windowBackground">@color/app_default_bgnd</item>
   </style>
   
   <style
      name="Theme.Moloko.Note">
      
      <!-- Window attributes -->
      <item name="android:windowBackground">@color/note_bgnd</item>
      
      <item name="titleWithTextStyle">@style/TitleWithViewStyle.Text.NoLine</item>
   </style>
   
   <style
      name="Theme.ChangeTagsDialog" parent="android:style/Theme.Dialog">
      
      <!-- Widgets -->
      <item name="android:listPreferredItemHeight">50dip</item>
   </style>

</resources>
