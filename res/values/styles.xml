<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- *********** -->
    <!-- Application -->

    <style name="WindowTitleStyle" parent="@android:style/TextAppearance.WindowTitle"></style>

    <style name="ActionBarStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/ActionBarTextStyle</item>
        <item name="android:subtitleTextStyle">@style/ActionBarSubtitleTextStyle</item>
        <item name="android:actionMenuTextColor">@color/app_actionbar_subtitle_color</item>
    </style>

    <style name="ActionBarStyle.NoTitle">
        <item name="android:displayOptions">showHome</item>
    </style>

    <style name="ActionBarStyle.HomeAsUp">
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <style name="ActionBarStyle.HomeAsUp.NoTitle">
        <item name="android:displayOptions">showHome|homeAsUp</item>
    </style>

    <style name="ActionBarStyle.Tab">
        <item name="android:navigationMode">tabMode</item>
    </style>

    <style name="ActionBarStyle.Tab.Collapsed">
        <item name="android:displayOptions"></item>
    </style>

    <style name="ActionBarTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/app_actionbar_text_size</item>
        <item name="android:textColor">@color/app_actionbar_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBarSubtitleTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Subtitle">
       <item name="android:textColor">@color/app_actionbar_subtitle_color</item>
    </style>      

    <style name="Tag">
        <item name="android:textColor">@color/app_tag_text</item>
        <item name="android:background">@drawable/app_tag_bgnd</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="No_List_Elements_Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/priority_2</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:padding">5dip</item>
    </style>

    <style name="SimpleLine_Default">
        <item name="lineColor">@color/app_default_line</item>
    </style>

    <!-- TextViewStyle -->

    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.Light.TextView">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- AutocompleteTextViewStyle -->

    <style name="AutoCompleteTextViewStyle" parent="@android:style/Widget.DeviceDefault.Light.AutoCompleteTextView">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- RtmSmartAdd -->

    <style name="RtmSmartAddTextViewStyle" parent="@style/AutoCompleteTextViewStyle">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- ListStyle -->

    <style name="ListViewStyle" parent="@android:style/Widget.DeviceDefault.Light.ListView" />

    <style name="ExpandableListViewStyle" parent="@android:style/Widget.DeviceDefault.Light.ExpandableListView" />

    <!-- GridViewStyle -->

    <style name="GridViewStyle" parent="@android:style/Widget.DeviceDefault.Light.GridView" />

    <!-- TextWith...Styles -->

    <style name="TitleWithViewStyle">
        <item name="showTopLine">true</item>
        <item name="topLineColor">@color/task_overview_bgnd_stroke</item>
        <item name="topLineHeight">1dip</item>
        <item name="titleSize">@dimen/app_title_with_text_textSize</item>
        <item name="titleStyle">bold</item>
    </style>

    <style name="TitleWithViewStyle.Text">
        <item name="textSize">@dimen/app_title_with_text_textSize</item>
        <item name="textStyle">normal</item>
    </style>

    <style name="TitleWithViewStyle.Text.NoLine">
        <item name="showTopLine">false</item>
    </style>

    <style name="TitleWithViewStyle.Spinner"></style>

    <style name="TitleWithViewStyle.Spinner.NoLine">
        <item name="showTopLine">false</item>
    </style>

    <!-- WrappingLayoutStyle -->

    <style name="WrappingLayoutStyle">
        <item name="horizontal_spacing">2dip</item>
        <item name="vertical_spacing">3dip</item>
    </style>

    <!-- ClearButtonStyle -->

    <style name="ClearButtonStyle">
        <item name="drawablePressed">@drawable/ic_button_edittext_pressed_delete</item>
        <item name="drawableUnpressed">@drawable/ic_button_edittext_delete</item>
    </style>

    <style name="ClearButtonStyle.Inverted">
        <item name="drawableUnpressed">@drawable/ic_button_edittext_pressed_delete</item>
        <item name="drawablePressed">@drawable/ic_button_edittext_delete</item>
    </style>

    <!-- Take preferences from RTM checkbox style -->

    <style name="TakePrefsFromRtmCheckboxStyle" parent="@android:style/TextAppearance.Small" />

    <!-- Own Preferences layout -->

    <style name="MolokoPrefsLayoutStyle">
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">6dip</item>
        <item name="android:layout_marginTop">6dip</item>
        <item name="android:layout_marginBottom">6dip</item>
    </style>

    <!-- Dialog button style -->
    <style name="DialogButton" parent="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small" />

    <!-- WheelView style -->
    <style name="WheelViewStyle">
        <item name="topShadowDrawable">@null</item>
        <item name="bottomShadowDrawable">@null</item>
        <item name="centerDrawable">@drawable/wheel_selector_val</item>
        <item name="backgroundDrawable">@drawable/wheel_selector_bgnd</item>
    </style>

    <!-- ********* -->
    <!-- TasksList -->

    <style name="TasksList_ListItem_Checked">
        <item name="android:src">@drawable/taskslist_listitem_checked_mark</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TasksList_ListItem_DescriptionText" parent="@android:style/TextAppearance.Medium">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TasksList_ListItem_ListName" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/taskslist_listitem_listname_text_normal</item>
        <item name="android:background">@color/taskslist_listitem_listname_text_bgnd</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TasksList_ListItem_DueDate" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TasksList_ListItem_Location" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/taskslist_listitem_location_text_normal</item>
        <item name="android:background">@color/taskslist_listitem_location_text_bgnd</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TasksListSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem" />

    <style name="TasksListSpinnerItem.Active">
        <item name="android:textColor">@color/holo_blue_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TasksListSpinnerDropdownItem" parent="@android:style/TextAppearance.DeviceDefault.Widget.DropDownItem" />

    <style name="TextAppearance.TasksListSpinnerDropdownItem.SecondLine" parent="ActionBarSubtitleTextStyle" />

    <style name="TasksListSpinnerDropdownItem" parent="@android:style/Widget.DeviceDefault.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/TextAppearance.TasksListSpinnerDropdownItem</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <!-- ********* -->
    <!-- TaskLists -->

    <style name="TaskLists_Group_ListName" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/tasklists_group_listname</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TaskLists_Group_NumTasks_Text" parent="@android:style/TextAppearance.Medium"></style>

    <style name="TaskLists_Child_Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/tasklists_child_text</item>
    </style>

    <!-- ************ -->
    <!-- ContactsList -->

    <style name="ContactsList_ListItem_Picture">
        <item name="android:src">@drawable/ic_list_contactslist_user</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ContactsList_ListItem_Fullname" parent="TasksList_ListItem_DescriptionText" />

    <style name="ContactsList_ListItem_Username" parent="TasksList_ListItem_ListName">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ContactsList_ListItem_Num_Shared" parent="TasksList_ListItem_Location">
        <item name="android:textColor">@color/contactslist_listitem_shared_tasks_text</item>
    </style>

    <!-- ************** -->
    <!-- Quick add task -->

    <style name="Quick_Add_Task_Button_Bar_Fragment" parent="@android:style/Widget.DeviceDefault.Light.ActionMode">
        <item name="android:background">?android:attr/actionModeSplitBackground</item>
    </style>

    <style name="Quick_Add_Task_Action_Bar_Fragment_Text">
        <item name="android:textColorHint">@color/app_darker_gray</item>
    </style>

    <!-- ************ -->
    <!-- Dialogs -->

    <style name="__WheelTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/app_dlg_due_picker_value</item>
        <item name="android:textSize">@dimen/wheel_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="WheelTextAppearance" parent="__WheelTextAppearance" />

    <style name="Dlg_DuePicker_Weekday" parent="WheelTextAppearance">
        <item name="android:textColor">@color/app_dlg_due_picker_weekday</item>
    </style>

    <style name="Dlg_About_Moloko_TextAppearence" parent="@android:style/TextAppearance.Theme.Dialog">
    </style>

    <!-- ********* -->
    <!-- Home -->

    <style name="Home_Widget_Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Home_UserName_TextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.DropDownHint" />
    
    <style name="Home_LastSync_TextStyle" parent="Home_UserName_TextStyle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Home_Widget_Calendar_Date">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_menu_icon_fill</item>
    </style>
    
    <style name="Home_DrawerStyle" parent="@android:style/Widget.DeviceDefault.ListView">
       <item name="android:choiceMode">singleChoice</item>
       <item name="android:background">@android:color/background_dark</item>
    </style>
    
     <style name="Home_DrawerItemStyle">
       <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
       <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>

    <!-- ********* -->
    <!-- Task -->

    <style name="Task_Overview_DescriptionText" parent="@style/TasksList_ListItem_DescriptionText">
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="Task_Overview_ListName" parent="@style/TasksList_ListItem_ListName" />

    <style name="Task_Date_Text" parent="@style/Note_Created_Date_Text" />

    <style name="Task_Source_Text" parent="@style/Note_Created_Date_Text" />

    <style name="WrappingLayoutStyle.Task">
        <item name="horizontal_spacing">5dip</item>
        <item name="vertical_spacing">5dip</item>
    </style>

    <!-- ********* -->
    <!-- Task Edit -->

    <style name="Task_Edit_Title">
        <item name="android:textSize">@dimen/app_title_with_text_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Task_Edit_ButtonBar">
        <item name="android:background">@color/task_activity_button_bar_bgnd_fill</item>
    </style>

    <!-- ********* -->
    <!-- Note -->

    <style name="Note_Title" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/note_title</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Note_Text" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Note_Created_Date_Text" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/note_created_date_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Note_Line_Style" parent="@style/SimpleLine_Default">
        <item name="lineColor">@color/note_header_line</item>
    </style>

    <!-- ************ -->
    <!-- Notification -->

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="NotificationStackCount">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <!-- ********* -->
    <!-- Error -->

    <style name="Error">
        <item name="android:background">@color/error_bgnd</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="allPadding">10dip</item>
        <item name="textSize">@dimen/app_title_with_text_textSize</item>
        <item name="textStyle">normal</item>
        <item name="showTopLine">false</item>
        <item name="imageSrc">@drawable/ic_black_error</item>
        <item name="text">@string/err_error</item>
    </style>

</resources>