<?xml version="1.0" encoding="utf-8"?>
<selector
   xmlns:android="http://schemas.android.com/apk/res/android">

   <item
      android:state_pressed="false"
      android:state_focused="false">
      <shape
         android:shape="rectangle">
         <solid
            android:color="@color/app_titlebar_btn_bgnd_normal" />
      </shape>
   </item>
   
   <item
      android:state_pressed="false"
      android:state_focused="true">
      <shape
         android:shape="rectangle">
         
         <solid
            android:color="@color/app_titlebar_btn_bgnd_normal" />
         <stroke 
            android:width="2dip"
            android:color="@color/app_titlebar_btn_focused" />
      </shape>
   </item>
   
   <item
      android:state_pressed="true">
      <shape
         android:shape="rectangle">
         <solid
            android:color="@color/app_titlebar_btn_bgnd_pressed" />
      </shape>
   </item>

</selector>
