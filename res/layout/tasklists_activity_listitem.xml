<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tasklists_listitem"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
	<TextView
	   android:id="@+id/tasklists_listitem_list_name"
	   style="@style/TaskLists_ListItem_ListName"	     
	   android:layout_width="0sp"
	   android:layout_height="wrap_content"
	   android:layout_centerVertical="true"
	   android:layout_weight="1"
	   android:text="ListName"	   
	   android:padding="10sp" />
	   
	 <LinearLayout
	   android:id="@+id/tasklists_listitem_icons_container"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_gravity="center_vertical"
	   android:orientation="horizontal"
	   android:visibility="gone" />
	      
    <TextView
       android:id="@+id/tasklists_listitem_num_tasks"
       style="@style/TaskLists_ListItem_NumTasks_Text"
       android:background="@drawable/tasklists_listitem_numtasks_bgnd"     
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="5sp"
       android:layout_marginRight="?android:attr/scrollbarSize"
       android:layout_centerVertical="true"
       android:text="num_tasks"
       android:gravity="center" />	
</LinearLayout>