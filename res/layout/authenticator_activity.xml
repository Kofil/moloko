<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent">
    
   <ScrollView
      android:layout_width="fill_parent"
      android:layout_height="0dip"
      android:layout_weight="1">
        
      <RelativeLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:paddingTop="13dip"
         android:paddingBottom="13dip"
         android:paddingLeft="20dip"
         android:paddingRight="20dip">
            
         <TextView
            android:id="@+id/auth_textview_api_key"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auth_api_key_label" />
                
         <EditText
            android:id="@+id/auth_edit_api_key"
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auth_textview_api_key"
            android:layout_alignLeft="@id/auth_textview_api_key"
            android:scrollHorizontally="true"
            android:capitalize="none"
            android:autoText="false"
            android:inputType="text" />
                
         <TextView
            android:id="@+id/auth_textview_shared_secret"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_marginTop="2dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/auth_edit_api_key"
            android:layout_alignLeft="@id/auth_edit_api_key"
            android:text="@string/auth_api_shared_secret_label" />
                
         <EditText
            android:id="@+id/auth_edit_shared_secret"
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auth_textview_shared_secret"
            android:layout_alignLeft="@id/auth_textview_shared_secret"
            android:scrollHorizontally="true"
            android:capitalize="none"
            android:autoText="false"
            android:inputType="text" />
                             
         <TextView
            android:id="@+id/auth_textview_permission"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:layout_below="@id/auth_edit_shared_secret"
            android:layout_alignLeft="@id/auth_edit_shared_secret"
            android:text="@string/auth_permission_label" />
         
         <LinearLayout
            android:id="@+id/auth_spin_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/auth_textview_permission"
            android:layout_alignLeft="@id/auth_textview_permission"
            android:orientation="horizontal">
            
            <Spinner
	            android:id="@+id/auth_spin_permission"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"         
	            android:entries="@array/rtm_permissions" />
            
	         <ImageButton
	            android:id="@+id/auth_btn_perm_info"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dip"
	            android:layout_gravity="center_vertical"
	            android:src="@android:drawable/ic_dialog_info"
	            android:tint="@color/priority_2"
	            android:onClick="onPermInfoClicked" />
         </LinearLayout>
             
         <TextView
            android:id="@+id/auth_text_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_below="@id/auth_spin_container"
            android:layout_alignLeft="@id/auth_spin_container" />
             
      </RelativeLayout>
   </ScrollView>
    
   <FrameLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="#c6c3c6"
       android:paddingTop="4dip"
       android:paddingLeft="2dip"
       android:paddingRight="2dip">
        
      <Button
         android:id="@+id/auth_btn_cancel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="left"
         android:layout_marginLeft="10dip"
         android:minWidth="100dip"
         android:text="@string/btn_cancel"
         android:onClick="onCancel" />
            
      <Button
         android:id="@+id/auth_btn_continue"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:layout_marginRight="10dip"
         android:minWidth="100dip"
         android:text="@string/btn_continue"
         android:onClick="onAuthenticate" />
   </FrameLayout>
    
</LinearLayout>
