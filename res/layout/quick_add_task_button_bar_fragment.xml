<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Quick_Add_Task_Action_View"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/app_actionbar_height"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/quick_add_task_btn_due_date"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_button_task_time"
        android:text="^" />

    <ImageButton
        android:id="@+id/quick_add_task_btn_prio"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_button_task_priority"
        android:text="!" />

    <ImageButton
        android:id="@+id/quick_add_task_btn_list_tags"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_button_task_smart_add_list_or_tag"
        android:text="#" />

    <ImageButton
        android:id="@+id/quick_add_task_btn_location"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_button_task_location"
        android:text=" @" />

    <ImageButton
        android:id="@+id/quick_add_task_btn_repeat"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_button_task_recurrent"
        android:text="*" />

    <ImageButton
        android:id="@+id/quick_add_task_btn_estimate"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_button_task_thumb"
        android:text="=" />

</LinearLayout>