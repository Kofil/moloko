<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Home_DrawerItemStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/user_name"
        style="@style/Home_UserName_TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/loading_spinner"
        android:layout_marginLeft="12dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/design_text" />

    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dip"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/last_sync_time"
        style="@style/Home_LastSync_TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_name"
        android:layout_below="@+id/user_name"
        android:drawableLeft="@drawable/ic_small_white_refresh"
        android:drawablePadding="5dip"
        android:singleLine="true"
        android:text="@string/design_text" />

</RelativeLayout>