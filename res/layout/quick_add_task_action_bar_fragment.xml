<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Quick_Add_Task_Action_Bar_Fragment"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/app_actionbar_height" >

    <LinearLayout
        android:id="@+id/back"        
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_margin="2dip"
        android:background="?selectableItemBackground"
        android:focusable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:src="?homeAsUpIndicator" />

        <ImageView
            android:layout_width="@dimen/app_actionbar_actionItem_width"
            android:layout_height="@dimen/app_actionbar_actionItem_heigth"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:paddingRight="4dip"
            android:src="@drawable/ic_title_add_task" />
    </LinearLayout>

    <dev.drsoran.moloko.widgets.RtmSmartAddTextView
        android:id="@+id/quick_add_task_edit"
        style="@style/Quick_Add_Task_Action_Bar_Fragment_Text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"        
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dip"
        android:layout_marginTop="4dip"
        android:layout_toRightOf="@id/back"
        android:hint="@string/quick_add_task_hint"
        android:imeOptions="actionDone"
        android:inputType="text|textAutoComplete|textCapSentences" />

</RelativeLayout>